<div class="auxiliar_component center-block">
    <form class="form-inline center-block form-group">
        <input max="9" autofocus required oninvalid="validarCedula(this);" type="text" pattern="[1-8][0-9]{6,8}" class="form-control" placeholder="Cedula del paciente" style="width:180px;display:inline-block;" />
        <button id="consultaPorCedula" class="btn btn-success" href="" type="submit">
            <span class="glyphicon glyphicon-search"></span>
        </button>
    </form>

    <h2>Datos personales</h2>
    <div class="form-group">
        <label for="nombre">Nombre:</label>
        <input maxlength="20" readonly="readonly" class="form-control" id="nombre" ng-model="usuario.Nombre">
    </div>
    <div class="form-group">
        <label for="primer_apellido">Primer Apellido:</label>
        <input maxlength="20" readonly="readonly" class="form-control" id="primer_apellido" ng-model="usuario.PrimerApellido">
    </div>
    <div class="form-group">
        <label for="segundo_apellido">Segundo Apellido:</label>
        <input maxlength="20" readonly="readonly" class="form-control" id="segundo_apellido" ng-model="usuario.SegundoApellido">
    </div>

    <div class="form-group">
        <label for="fecha_nacimiento">Fecha de Nacimiento:</label>
        <input type="date" readonly="readonly" class="form-control" id="fecha_nacimiento" ng-model="usuario.FechaNacimiento">
    </div>
    <div class="form-group">
        <label for="telefono">N&uacute;mero telefonico:</label>
        <input pattern="[1-9][0-9]*" readonly="readonly" class="form-control" id="telefono" ng-model="usuario.Telefono">
    </div>
    <hr />
    @RenderPage("~/WebUtils/VerCitasPaciente.cshtml")
    <h3>Editar Cita</h3>
    @RenderPage("EdicionHistorialClinicoVistaComun.cshtml")
    <button form="datosCita" type="submit" class="btn btn-warning center-block">Editar</button>
</div>
