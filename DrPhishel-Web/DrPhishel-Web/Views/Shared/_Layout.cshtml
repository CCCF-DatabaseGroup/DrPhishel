<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link id="Link1" rel="shortcut icon" href="~/favicondr.ico" type="image/x-icon" />
    <link id="Link2" rel="icon" href="~/favicondr.ico" type="image/ico" />
</head>
<body ng-app="myApp">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <nav class="clearfix">
                    <img height="48" width="48" class="pull-left" src="~/img/dr_icon.png" />
                    <a class="navbar-brand" href="/Home">
                        <span>DrPhishel</span>
                    </a>
                </nav>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, null)</li>
                    <li class="nav-item">@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        @RenderBody()
        <br />
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DrPhishel</p>
        </footer>
    </div>
    <!--
        a@Scripts.Render("~/bundles/jquery")
        a@Scripts.Render("~/bundles/bootstrap")
        a@RenderSection("scripts", required: false)
    -->
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/button.bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.jquery.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/AngularScripts/AngularMain.js"></script>
    <script src="~/Scripts/AngularScripts/HistorialClinico.js"></script>
    <script src="~/Scripts/AngularScripts/AngularAdministrador.js"></script>
    <script src="~/Scripts/AngularScripts/AngularRegistro.js"></script>
    <script src="~/Scripts/AngularScripts/AngularLogin.js"></script>
    <script src="~/Scripts/AngularScripts/AngularCitasPaciente.js"></script>
    <script src="~/Scripts/AngularScripts/AngularPaciente.js"></script>
    <script src="~/Scripts/angular-animate.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
</body>
</html>
