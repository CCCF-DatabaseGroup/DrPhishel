<div class="auxiliar_component center-block">
    <div class="form-group center-block table-responsive">
        <table ng-init="obtenerSolicitudesDoctores()" class="table" ng-controller="AdministradorController">
            <thead>
                <!-- Este es el encabezado de la tabla, segun los valores que se desean obtener -->
                <tr class="info">
                    <th>N&uacute;mero de doctor</th>
                    <th>Nombre</th>
                    <th>Primer apellido</th>
                    <th>Segunda apellido</th>
                    <th>Ver ficha</th>
                    <th>Aceptar</th>
                </tr>
            </thead>
            <tbody>
                <!--Es la lista de pedidos ordenada por hora-->
                <tr ng-repeat="doctorSolicitante in doctorSolicitantes">
                    <td>{{doctorSolicitante.NumeroDoctor}}</td>
                    <td>{{doctorSolicitante.NombreDoctor}}</td>
                    <td>{{doctorSolicitante.PrimerApellido}}</td>
                    <td>{{doctorSolicitante.SegundoApellido}}</td>
                    <td>
                        <input type="button" class="btn btn-info" ng-click="verDatosDoctor(doctorSolicitante)" data-target="#DatosDoctorModal{{index}}" data-toggle="modal" value="Ver detalles" />
                        <div id="DatosDoctorModal{{index}}" class="modal fade" role="dialog">
                            <div class="modal-dialog modal-lg">

                                <!-- Este es un modal emergente que se encarga de solicitar los datos del usuario para que pueda logearse-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <!--Este es el titulo del modal emergente-->
                                        <h4 class="modal-title">Datos de la cita</h4>
                                    </div>

                                    <div class="modal-body">
                                        <b>N&uacute;mero de doctor:</b> {{doctorSolicitante.NumeroDoctor}}<br />
                                        <b>Nombre completo:</b> {{doctorSolicitante.NombreDoctor}} {{doctorSolicitante.PrimerApellido}} {{doctorSolicitante.SegundoApellido}}<br />
                                        <b>Especialidad:</b> {{doctorSolicitante.NombreEspecialidad}}<br />
                                        <b>Tarjeta de credito:</b> {{doctorSolicitante.NumeroTarjetaCredito}}<br />
                                        <b>Direccion del consultorio:</b> {{DireccionConsultorio}}<br />
                                        <b>Telefono del consultorio:</b> {{TelefonoConsultorio}}<br />
                                    </div>
                                    <!--Este es el footer donde el boton close cierra el modal-->
                                    <div class="modal-footer">
                                        <!--Este boton cierra el modal-->
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                        
                    </td>
                    <td>
                        <button ng-click="aceptarDoctor(doctorSolicitante)" type="button" class="btn btn-warning" data-dismiss="modal">Aceptar Doctor</button>
                    </td>

                </tr>
            </tbody>
        </table>

    </div> 
</div>
