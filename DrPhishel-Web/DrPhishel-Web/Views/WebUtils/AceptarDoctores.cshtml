<div class="auxiliar_component center-block">
    <div class="form-group center-block table-responsive">
        <table class="table" ng-controller="AdministradorController">
            <thead>
                <!-- Este es el encabezado de la tabla, segun los valores que se desean obtener -->
                <tr class="info">
                    <th>N&uacute;mero de doctor</th>
                    <th>Nombre</th>
                    <th>Primer apellido</th>
                    <th>Segunda apellido</th>
                    <th>Ver ficha</th>
                </tr>
            </thead>
            <tbody>
                <!--Es la lista de pedidos ordenada por hora-->
                <tr ng-repeat="doctorSolicitante in doctorSolicitantes">
                    <td>{{doctorSolicitante.NumeroDoctor}}</td>
                    <td>{{doctorSolicitante.Nombre}}</td>
                    <td>{{doctorSolicitante.PrimerApellido}}</td>
                    <td>{{doctorSolicitante.SegundoApellido}}</td>
                    <td>


                        <div ng-controller="ModalDemoCtrl">
                            <script type="text/ng-template" id="myModalContent.html">
                                <div class="modal-header">
                                    <h3 class="modal-title">I'm a modal!</h3>
                                </div>
                                <div class="modal-body">
                                    <ul>
                                        <li ng-repeat="item in items">
                                            <a href="#" ng-click="$event.preventDefault(); selected.item = item">{{ item }}</a>
                                        </li>
                                    </ul>
                                    Selected: <b>{{ selected.item }}</b>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-primary" type="button" ng-click="ok()">OK</button>
                                    <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
                                </div>
                            </script>
                            <button type="button" class="btn btn-default" ng-click="open()">Open me!</button>
                        </div>

                        
                        
                    </td>

                </tr>
            </tbody>
        </table>

    </div> 
</div>
